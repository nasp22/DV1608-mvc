{% extends "base.html.twig" %}


{% block title %}Card Game{% endblock %}

{% block body %}

<div class = "board">
    {{ include('flash.html.twig') }}
    <div class="flex">
        <div class="one">
            <h1> My hand: {{ playersPoints}} </h1>
            {% for value in hand%}
                <img src="../../img/cards/{{ value }}.png" alt="{{ value }}" style= "width: 25%;">
            {% endfor %}
        </div>
        <div class="two">
            <h1> Computers hand: 0 </h1>
        </div>
    </div>

    <h1></h1>
    <div class="flex">
        <div class="left">
            <a href="{{ path('21_new') }}"> <img src="{{ asset('img/restart.png') }}" alt="" style="border-radius: 8px; width: 45%;"> </a>
        </div>
        <div class="center">
            <a href="{{ path('21_draw') }}">
            <img src="{{ asset('img/back.jpg') }}" alt="" style="border-radius: 8px; width: 35%;">
            </a>
        </div>
        <form class="right" method="post" action="{{ path('21_stay') }}">
            <input type="hidden" name="stay" value="{{playersPoints}}">
            <input type="image" name="stay" value="{{playersPoints}}" alt="stay" src="{{ asset('img/stop.png') }}" style="width: 35%;">
        </form>
    </div>
</div>

{% endblock %}