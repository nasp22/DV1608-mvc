<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/favicon.jpg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/header.jpg') }})">
            <a href="{{ asset('/') }}">
                <span class="site-title">My Symfony Site</span>
            </a>
        </header>
        <nav class="navbar">
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Redovisa</a></li>
                <li><a href="{{ path('lucky') }}">Lucky animal</a></li>
                <li><a href="{{ path('quote') }}"> Dagens citat</a></li>
            </ul>
        </nav>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>{% block footer %}Footer{% endblock %}</footer>
    </body>
</html>
